 /* pages/sgt/sgt.wxss */
page{
  font-weight: bold;
}
/*顶部*/
.top {
  position: relative;
  height: 300rpx;
  font-weight: bold;
}




/*底图*/

.top .img {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -2;
  width: 100%;
  height: 300rpx;
}

.top .img image {
  width: 100%;
  height: 100%;
}


.hot-view, .hot-city {
  padding: 0 40rpx;
  padding-top: 28rpx;
}

.hot-view .text{
    font-size: 30rpx;
}
.hot .title {
  height: 34rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  color: #fff;
  font-weight: bold;
}

.hot .title text {
  flex: 1 1 auto;
  text-align: center;
    font-size: 35rpx;
}

.hot .title text:first-child, .hot .title text:last-child {
  height: 1px;
  background: #eae1d2;
  font-size: 20rpx;
}



.divider {
  width: 100%;
  height: 18rpx;
  background: #f0ede2;
}

