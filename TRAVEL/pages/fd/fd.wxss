/* pages/fd/fd.wxss */
page{
  font-weight: bold;
}
/*顶部*/
.top {
  position: relative;
  height: 300rpx;
  font-weight: bold;
}

.top .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 300rpx;
  background: rgba(0, 0, 0, 0.2);
  z-index: 0;
}


/*底图*/

.top .img {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -2;
  width: 100%;
  height: 300rpx;
}

.top .img image {
  width: 100%;
  height: 100%;
}
.divider {
  width: 100%;
  height: 18rpx;
  background: #f0ede2;
}
.view-box {
  width: 100%;
  padding: 0 10rpx 0 18rpx;
  box-sizing: border-box;
}

.view {
  width: 100%;
  background: #fff;
  padding: 12rpx 18rpx 16rpx 12rpx;
  box-sizing: border-box;
  margin-top: 16rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.view .img {
    float: left;
  width: 233rpx;
  height: 172rpx;
  border-radius: 10rpx;
  background: red;
}

.view .info {
    margin-left: 251rpx;
}

.view .info .title, .view .info .desc {
  display: block;

}

.view .info .title {
  font-size: 28rpx;
  color: #666;
  line-height: 38rpx;
  margin-top: 10rpx;
}

.view .info .desc {
  font-size: 20rpx;
  color: #bbb4af;
  line-height: 28rpx;
}

.view .info .bus {
  display: flex;
  color: #bbb4af;
  margin-top: 46rpx;
  align-items: center;
}

.view .bus .bus-around {
  color: #fa6f12;
  font-size: 26rpx;
}


.view .bus .bus-detail {
  position: relative;
  font-size: 26rpx;
  margin-left: 10rpx;
}