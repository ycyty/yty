.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}


/*header*/

.persional-header {
  width: 100%;
  height: 416rpx;
  background: #4abdcc;
  display: flex;
  flex-direction: column;
  /*background: -webkit-gradient(bottom left,top right,#d9d3c6 50%,#e5ded1 50%);*/
}

.persional-header .edit {
  height: 78rpx;
  overflow: hidden;
}

.persional-header .edit text {
  font-size: 16px;
  color: #fff;
  font-weight: bold;
  float: right;
  margin-right: 24rpx;
  margin-top: 36rpx;
}

.persional-header .info {
  height: 186rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}



.persional-header .info .header-img {
  height: 186rpx;
  width: 186rpx;
  background: #fff;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 50%;

}

.persional-header .info .header-img image {
  height: 100%;
  width: 100%;
  border-radius: 50%;
  
}


.persional-header .info.name {
  width: 100%;
  text-align: center;
  font-size: 28x;
  color: #fff;
  font-weight: bold;


}

.persional-header .info .name .username {
  position: relative;
  margin-top: 42rpx;

}

.persional-header .info .name .username text {
  font-size: 28px;
  color: #fff;

}



.persional-header .info .name .tel {
  margin-top: 20rpx;
  display: flex;
  position: relative;
 
}
